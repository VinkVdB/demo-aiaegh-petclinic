@model PetClinic.Models.Owner

@{
    ViewData["Title"] = (Model?.Id ?? 0) == 0 ? "Add Owner" : "Update Owner";
    bool isNew = (Model?.Id ?? 0) == 0;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@(isNew ? "Create" : "Edit")" method="post" class="form-horizontal" id="add-owner-form">
    @if (!isNew)
    {
        <input asp-for="Id" type="hidden" />
    }
    
    <div class="form-group has-feedback">
        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-2 control-label">First Name</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="help-block text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group has-feedback">
        <div class="form-group">
            <label asp-for="LastName" class="col-sm-2 control-label">Last Name</label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="help-block text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group has-feedback">
        <div class="form-group">
            <label asp-for="Address" class="col-sm-2 control-label">Address</label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="help-block text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group has-feedback">
        <div class="form-group">
            <label asp-for="City" class="col-sm-2 control-label">City</label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="help-block text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group has-feedback">
        <div class="form-group">
            <label asp-for="Telephone" class="col-sm-2 control-label">Telephone</label>
            <div class="col-sm-10">
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="help-block text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-primary" type="submit">@(isNew ? "Add Owner" : "Update Owner")</button>
        </div>
    </div>
</form>
