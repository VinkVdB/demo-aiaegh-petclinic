# Docker Environment Configuration
# Copy this file to .env for Docker Compose

# Application settings
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# MySQL Database settings
MYSQL_ROOT_PASSWORD=
MYSQL_USER=petclinic
MYSQL_PASSWORD=petclinic
MYSQL_DATABASE=petclinic

# PostgreSQL Database settings (alternative)
POSTGRES_USER=petclinic
POSTGRES_PASSWORD=petclinic
POSTGRES_DB=petclinic

# Spring Boot Database Configuration (choose one)
# For MySQL:
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/petclinic
SPRING_DATASOURCE_USERNAME=petclinic
SPRING_DATASOURCE_PASSWORD=petclinic

# For PostgreSQL:
# SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/petclinic
# SPRING_DATASOURCE_USERNAME=petclinic
# SPRING_DATASOURCE_PASSWORD=petclinic

# JPA Settings
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect
